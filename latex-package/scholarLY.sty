      % yes, creat redundant (empty) defs, for testing; remove later
      {
      \def\resultOne{}
      \def\resultTwo{}
      \def\resultThree{}
      \def\resultFour{}
      \def\resultFive{}
      }
      % no
      {\ifthenelse{\equal{\howmanytext}{1}}
        % yes...
        {%
        \StrBehind[1]{\bigmessage}{-text=}[\resultOne]
        \def\resultTwo{}
        \def\resultThree{}
        \def\resultFour{}
        \def\resultFive{}
        }
        % no
        {\ifthenelse{\equal{\howmanytext}{2}}
